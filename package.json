{
  "name": "calmm-js.github.io",
  "private": true,
  "description": "Calmm.js website",
  "main": "generated/bundle.js",
  "scripts": {
    "bundle": "npm run bundle:css & npm run bundle:js & wait",
    "bundle:css": "lessc --clean-css --autoprefix=\"> 1%\" src/_.less generated/bundle.css",
    "bundle:css:watch": "lessc --source-map --source-map-rootpath=\"file://$(pwd)/src\" src/_.less generated/bundle.css",
    "bundle:js": "NODE_ENV=production browserify src/app.js -t babelify -g envify -g uglifyify | uglifyjs -m -c 2>/dev/null > generated/bundle.js",
    "copy-polyfills": "mkdir -p generated && cp node_modules/es5-shim/es5-shim.min.js node_modules/es5-shim/es5-sham.min.js node_modules/html5shiv/dist/html5shiv.min.js node_modules/babel-polyfill/dist/polyfill.min.js generated/",
    "lint": "eslint .",
    "livereload:public": "livereload generated",
    "postinstall": "npm run copy-polyfills && npm run test && npm run bundle",
    "test": "npm run lint",
    "watch": "npm run watch:css & npm run watch:js & npm run livereload:public & wait",
    "watch:css": "npm run bundle:css:watch && watch-run -p 'src/**/*.less' 'npm run bundle:css:watch'",
    "watch:js": "watchify src/app.js -v --loadMaps --debug -t babelify -g envify -o generated/bundle.js"
  },
  "license": "MIT",
  "dependencies": {
    "atom.storage": "^0.5.0",
    "atom.undo": "^0.5.2",
    "karet": "^1.1.0",
    "karet.util": "^0.11.3",
    "kefir": "^3.7.1",
    "kefir.atom": "^5.2.3",
    "partial.lenses": "^9.8.0",
    "react-dom": "^15.4.2"
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-eslint": "^7.2.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.0",
    "babel-plugin-transform-react-constant-elements": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-3": "^6.22.0",
    "babelify": "^7.3.0",
    "browserify": "^14.3.0",
    "envify": "^4.0.0",
    "es5-shim": "^4.5.9",
    "eslint": "^3.19.0",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-react": "^6.10.3",
    "html5shiv": "^3.7.3",
    "less": "^2.7.2",
    "less-plugin-autoprefix": "^1.5.1",
    "less-plugin-clean-css": "^1.5.1",
    "livereload": "^0.6.2",
    "uglify-js": "^2.8.21",
    "uglifyify": "^3.0.4",
    "watch-run": "^1.2.5",
    "watchify": "^3.9.0"
  }
}
